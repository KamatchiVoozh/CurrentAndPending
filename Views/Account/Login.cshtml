@model User_Details
@{
    ViewData["Title"] = "Login";
}

<style>
    .custom-centering {
        text-align: center;
        margin-top: 70px;
        left: 19%;
        position: relative;
    }

    .text-info {
        color: white;
        font-weight: 500;
        font-size: 20px;
    }

    .custom-card{
        background: #3d3d3d;
        max-height: 90%;
        max-width: 60%;
        box-shadow: 0 0 30px 45px rgba(0,0,0,0.1);
        padding-top:60px;
        padding-bottom: 60px;
    }

    .custon-card-body{
        background: #4d4d4d;
    }

    .custom-card-header{
        color: white;
        font-weight: 600;
        font-size: 30px;
    }

    .custom-input{
        width: 40%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    .btn{
        padding: 12px 36px;
        margin-top: 10px;
    }

    .btn-warning{
        background-color: #ffd200;
        color: black;
        font-weight: 600;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 custom-centering">
            <div class="custom-card">
                <div class="custom-card-header">
                    <p>Login</p>
                </div>
                <div class="custom-card-body">
                    @{
                        if (@ViewBag.error != null)
                        {
                          <div class="alert alert-danger">
                            <p>@ViewBag.error</p>
                         </div>
                        }
                    }
                    <div class="credentials">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.ValidationSummary()
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "custom-input", @placeholder = "Email" })

                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "custom-input", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-warning btn-lg" value="Login" />
                            </div>
                        }
                        <p class="text-info">New Here? Please Register!</p>
                        <form enctype="multipart/form-data" method="get" asp-controller="Account" asp-action="Register" runat="server">
                            <input class="btn btn-warning btn-lg" type="submit" value="Register" runat="server" />
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>@ViewBag.Message</div>