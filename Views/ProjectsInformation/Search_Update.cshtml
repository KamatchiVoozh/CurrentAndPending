@model Document_Manager_Project.Models.Search_Details
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Project View Page";
}

<h2>
    Welcome to the Geographical Sciences Department
</h2>

<p>
    We focus on Research Projects
</p>
<ul>
    <li>On place to store all our proposals </li>
    <li>
        It's all about your Projects
    </li>
    <li>
        We listen to you. When you call us we'll answer and take the time that we need with
        you.
    </li>
    <li>
        We're real.  Let us edit some of the unreal stuff here!
    </li>
</ul>

<div class="card-body">
    @if (@Accessor.HttpContext.Session.GetString("FirstName") != null)

    {
        <p>Name:  @Accessor.HttpContext.Session.GetString("FirstName") </p>
        
    }
</div>

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Search
            </div>
            <div class="card-body">
                @using (Html.BeginForm("UpdateSearch", "ProjectsInformation", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName)
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName)
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Search" />
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<a href="@Url.Action("Back","Account")" class="btn btn-warning">Back</a>
<br />
<div>@ViewBag.Message</div>