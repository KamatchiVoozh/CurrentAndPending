@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor
<!DOCTYPE html>
<html lang="en">
<style>
    * {
        font-family: 'Raleway', sans-serif;
    }

    @*.image {
        background-image: url(https://4.bp.blogspot.com/-gY55z5lYt3M/Vdx4bR7UTqI/AAAAAAAAALE/XuD6UGbZo4c/s1600/geog_SET.jpg);
        height: 250px;
        background-blend-mode:color-burn;
        background-position: center;
    }*@
    .back{
        background: #000000;   
    }

    .navbar-brand{
        font-family: 'Raleway', sans-serif;
        font-weight: 600;
    }

    .nav-item {
        font-family: 'Raleway', sans-serif;
        font-weight: 600;
    }

    body .navbar {
        background: #e21833;
        padding: 15px;
    }


    footer{
        text-align: center;
        background: #000000; 

    }

    .umd-logo{
        max-width: 5%;
        border-radius: 50%;
        box-shadow: 0 0 30px 45px rgba(0,0,0,0.1);
    }
</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Document_Manager_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Document_Manager_Project.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;600&display=swap" rel="stylesheet">
</head>
<body class="back">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login" style="color: white">
                <img src="https://brand.umd.edu/uploads/images/logos-formal-seal.jpg" class="umd-logo" /> <span style="margin-left: 10px;">Document Manager Project</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" style="color: white" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white">Privacy</a>
                    </li>
                    @if (Accessor.HttpContext.Session.GetString("AuthId_Token") != null)
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" style="color: white" asp-action="Projects">Projects</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout" style="color: white">Logout</a>
                    </li>
                   
                    }
                    @if(Accessor.HttpContext.Session.GetString("Admin")!=null && Accessor.HttpContext.Session.GetString("Admin").Equals("True"))
                    {
                     <li class="nav-item">
                        <a class="nav-link" asp-controller="Approvals" style="color: white" asp-action="Approval_home">Access</a>
                    </li>
                    }
                       
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p style="color: white;">&copy; 2022 - Document Manager Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
